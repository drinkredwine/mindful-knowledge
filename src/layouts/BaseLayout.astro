---
import '@/styles/global.css';
import Header from '@/components/navigation/Header.vue';
import Footer from '@/components/navigation/Footer.vue';

export interface Props {
  title: string;
  description?: string;
  noIndex?: boolean;
  ogImage?: string;
}

const {
  title,
  description = 'Knowledge Management Demonstration - Interconnected Wiki and Presentations',
  noIndex = false,
  ogImage = '/og-image.png'
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const siteURL = Astro.site?.toString() || 'https://yourdomain.github.io';
const fullOgImageURL = new URL(ogImage, siteURL);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    {noIndex && <meta name="robots" content="noindex, nofollow" />}

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- OpenGraph Meta Tags -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullOgImageURL} />
    <meta property="og:site_name" content="TUKE Knowledge Management Demo" />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={fullOgImageURL} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Merriweather:ital,wght@0,300;0,400;0,700;1,400&display=swap" rel="stylesheet" />

    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-white text-gray-900 flex flex-col">
    <Header client:load />

    <main class="flex-1">
      <slot />
    </main>

    <Footer client:load />
  </body>
</html>
