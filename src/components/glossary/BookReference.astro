---
interface Props {
  bookRef?: string;
}

const { bookRef } = Astro.props;

let book = null;
if (bookRef) {
  try {
    const response = await fetch(new URL('/books.json', Astro.url));
    const booksData = await response.json();
    book = booksData.books[bookRef];
  } catch (e) {
    console.error('Failed to load book data', e);
  }
}
---

{book && (
  <div class="book-reference bg-gradient-to-r from-blue-50 to-indigo-50 border-l-4 border-blue-500 p-4 my-6 rounded-r-lg">
    <div class="flex gap-4">
      <img
        src={book.cover}
        alt={book.title}
        class="w-20 h-auto rounded shadow"
      />
      <div>
        <h4 class="font-bold text-blue-900 mb-1">{book.title}</h4>
        <p class="text-sm text-blue-700 mb-2">{book.author} ({book.year})</p>
        {book.keyQuote && (
          <p class="text-xs text-blue-600 italic">"{book.keyQuote}"</p>
        )}
      </div>
    </div>
  </div>
)}

{bookRef && !book && (
  <div class="book-reference bg-blue-50 border-l-4 border-blue-500 rounded-r-lg p-5 my-6">
    <div class="flex items-start gap-3">
      <svg class="w-6 h-6 text-blue-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
      </svg>
      <div class="flex-1">
        <h4 class="font-bold text-sm text-blue-900 mb-1">Key Reference</h4>
        <p class="text-sm text-blue-800 font-medium">{bookRef}</p>
        <p class="text-xs text-blue-600 mt-2 italic">
          Book details not found for: {bookRef}
        </p>
      </div>
    </div>
  </div>
)}
