---
interface Props {
  title: string;
  content: string;
  bookCover?: string;
}

const { title, content, bookCover } = Astro.props;
const bookCoverPath = bookCover ? `${import.meta.env.BASE_URL}${bookCover.replace(/^\//, '')}` : undefined;
---

<div class="minimal-slide-content h-screen flex flex-col items-center justify-center p-12">
  {bookCoverPath && (
    <div class="book-cover mb-8">
      <img
        src={bookCoverPath}
        alt={title}
        class="max-w-md mx-auto rounded-lg shadow-2xl"
      />
    </div>
  )}

  <div class="content text-center max-w-4xl" set:html={content} />
</div>

<style>
  .minimal-slide-content {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }

  .minimal-slide-content :global(h1) {
    font-size: 4rem;
    font-weight: 800;
    margin-bottom: 1rem;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
    line-height: 1.2;
  }

  .minimal-slide-content :global(h2) {
    font-size: 2.5rem;
    font-weight: 600;
    margin-top: 0.5rem;
    margin-bottom: 1.5rem;
    opacity: 0.9;
  }

  .minimal-slide-content :global(p) {
    font-size: 1.5rem;
    opacity: 0.9;
    margin-bottom: 1rem;
  }

  .minimal-slide-content :global(strong) {
    font-weight: 700;
    color: #fbbf24;
  }

  .book-cover img {
    max-height: 400px;
    object-fit: contain;
  }

  @media (max-width: 768px) {
    .minimal-slide-content :global(h1) {
      font-size: 2.5rem;
    }

    .minimal-slide-content :global(h2) {
      font-size: 1.75rem;
    }

    .minimal-slide-content :global(p) {
      font-size: 1.125rem;
    }
  }
</style>
